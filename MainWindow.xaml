<Window x:Class="PhotoRacoon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoRacoon"
        mc:Ignorable="d"
        Title="Photo Racoon v.1.0.0" Height="640" Width="800" Closing="OnWindowClose">
    <StackPanel>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Plik">
                    <MenuItem Header="Wyjście" Name="CloseButton" Click="CloseButton_Click"/>
                </MenuItem>
                <MenuItem Header="_Wstaw">
                    <MenuItem Header="Linia"/>
                    <MenuItem Header="Koło"/>
                    <MenuItem Header="Prostokąt"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <Canvas>
            <Line X1="0" Y1="0" X2="100" Y2="100" Canvas.Left="0" Canvas.Top="0" Stroke="Black" StrokeThickness="4" />
            <Ellipse Height="100" Width="200" Canvas.Left="148" Canvas.Top="58" Stroke="Black" StrokeThickness="4"/>
            <Rectangle Width="100" Height="100" Stroke="Black" StrokeThickness="4" Canvas.Top="100" Canvas.Left="400"/>
        </Canvas>
    </StackPanel>
</Window>
